<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MenuProUI.Dialogs.PasswordDialog"
        Width="480" Height="220"
        WindowStartupLocation="CenterOwner"
        Title="Senha RDP"
        CanResize="False">
  <Grid Margin="16" RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="10">
    <TextBlock Name="TitleText" FontSize="16" FontWeight="SemiBold"/>
    <TextBlock Grid.Row="1" Text="A senha não será armazenada. Ela será usada apenas para esta conexão." Opacity="0.8"/>

    <TextBlock Grid.Row="2" Text="Senha" />
    <TextBox Grid.Row="3" Name="PasswordBox" PasswordChar="●"/>

    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,6,0,0">
      <Button Content="Cancelar" Click="OnCancel"/>
      <Button Content="Abrir no terminal" Click="OnOpenTerminal"/>
      <Button Content="Conectar" Click="OnConnect"/>
    </StackPanel>
  </Grid>
</Window>
