<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MenuProUI.Dialogs.ConfirmDialog"
        Width="520" Height="180"
        WindowStartupLocation="CenterOwner"
        Title="Confirmar"
        CanResize="False">
  <Grid RowDefinitions="*,Auto" Margin="16">
    <TextBlock Name="Msg" TextWrapping="Wrap" FontSize="15"/>

    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,16,0,0">
      <Button Content="Cancelar" Click="OnCancel"/>
      <Button Content="Confirmar" Click="OnOk"/>
    </StackPanel>
  </Grid>
</Window>
