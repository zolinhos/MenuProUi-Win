<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MenuProUI.Dialogs.AccessDialog"
        Width="680" Height="640"
        WindowStartupLocation="CenterOwner"
        Title="Acesso"
        CanResize="False">
  <ScrollViewer Margin="16" VerticalScrollBarVisibility="Auto">
    <StackPanel Spacing="10">

      <TextBlock Text="Apelido" />
      <TextBox Name="AliasBox"/>

      <TextBlock Text="Tipo" />
      <ComboBox Name="TypeBox" SelectionChanged="OnTypeChanged"/>

      <Border BorderBrush="#333" BorderThickness="0,1,0,0" Margin="0,8,0,8"/>

      <StackPanel Name="PanelSshRdp" Spacing="10">
        <TextBlock Text="Host" />
        <TextBox Name="HostBox"/>

        <TextBlock Text="Porta" />
        <TextBox Name="PortBox"/>

        <TextBlock Text="Usuário" />
        <TextBox Name="UserBox"/>

        <!-- RDP extras -->
        <StackPanel Name="PanelRdp" Spacing="10">
          <TextBlock Text="Domínio (opcional, apenas RDP)" />
          <TextBox Name="DomainBox" Watermark="EX: CONTOSO"/>

          <Border BorderBrush="#333" BorderThickness="0,1,0,0" Margin="0,8,0,8"/>

          <CheckBox Name="IgnoreCertBox" Content="Aceitar certificado inválido (cert:ignore)" />
          <CheckBox Name="DynamicResBox" Content="Redimensionamento dinâmico (dynamic-resolution)" />
          <CheckBox Name="FullScreenBox" Content="Tela cheia (f)" />

          <TextBlock Text="Tamanho fixo (opcional, usado se NÃO for tela cheia e NÃO for dinâmico)" Opacity="0.8" />
          <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
            <StackPanel>
              <TextBlock Text="Largura" />
              <TextBox Name="WidthBox" Watermark="Ex: 1366"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
              <TextBlock Text="Altura" />
              <TextBox Name="HeightBox" Watermark="Ex: 768"/>
            </StackPanel>
          </Grid>
        </StackPanel>
      </StackPanel>

      <StackPanel Name="PanelUrl" Spacing="10">
        <TextBlock Text="URL" />
        <TextBox Name="UrlBox" Watermark="https://firewall.local:4444"/>
      </StackPanel>

      <TextBlock Text="Observações" />
      <TextBox Name="NotesBox" AcceptsReturn="True" Height="110"/>

      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
        <Button Content="Cancelar" Click="OnCancel"/>
        <Button Content="Salvar" Click="OnSave"/>
      </StackPanel>

    </StackPanel>
  </ScrollViewer>
</Window>
